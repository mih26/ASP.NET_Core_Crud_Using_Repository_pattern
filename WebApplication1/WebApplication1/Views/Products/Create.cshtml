@model WebApplication1.Models.Product
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12">
        <h3>Create new Product</h3>
        <form method="post" asp-action="Create" asp-controller="Products">
            <div class="fomr-group row mb-1">
                <label asp-for="ProductName" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="fomr-group row mb-1">
                <label asp-for="MfgDate" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="date" asp-for="MfgDate" class="form-control" />
                    <span asp-validation-for="MfgDate" class="text-danger"></span>
                </div>
            </div>

            <div class="fomr-group row mb-1">
                <label asp-for="Avaliable" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="checkbox" asp-for="Avaliable" />
                </div>
            </div>

            <div class="fomr-group row mb-1">
                <label asp-for="CustomerId" class="col-form-label col-2"></label>
                <div class="col-4">
                    <select asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customers, "CustomerId","CustomerName") )" class="form-select form-select-sm">
                        <option value="" selected>Select</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
            </div>

            <div class="fomr-group row mb-1">
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


